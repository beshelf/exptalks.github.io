{
  "extends": "eslint:recommended",
  "parser": "@typescript-eslint/parser",
  "env": {
    "node": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
        "jsx": true
    }
  },
  "rules": {
    "semi": ["error", "never"],
    "object-curly-spacing": ["error", "always"],
    "comma-spacing": "error",
    "key-spacing": "error",
    "no-trailing-spaces": "error"
  }
}
